<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>CulturalFest</display-name>
  <welcome-file-list>
    <welcome-file>Home.html</welcome-file>

    
  </welcome-file-list>
  <servlet>
  <servlet-name>Register.java</servlet-name>
  <servlet-class>com.arm.Login.Register.java</servlet-class>
  </servlet>
  <servlet>
  <servlet-name>LoginServlet.java</servlet-name>
  <servlet-class>com.arm.Login.LoginServlet.java</servlet-class>
  </servlet>
  <servlet>
  <servlet-name>DeleteServlet.java</servlet-name>
  <servlet-class>com.arm.Login.DeleteServlet.java</servlet-class>
  </servlet>
  
  
  <servlet-mapping>
  <servlet-name>Register.java</servlet-name>
  <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  <servlet-name>LoginServlet.java</servlet-name>
  <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  <servlet-name>DeleteServlet.java</servlet-name>
  <url-pattern>/delete</url-pattern>
  </servlet-mapping>
  <session-config>
        <session-timeout>1</session-timeout> <!-- Timeout set to 30 minutes -->
    </session-config>
</web-app>